{
  "name": "@ogham/filid",
  "version": "0.0.3",
  "description": "FCA-AI rule enforcement plugin for Claude Code agent workflows",
  "keywords": [
    "claude-code",
    "plugin",
    "fca-ai",
    "fractal",
    "context-architecture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vincent-kk/ogham.git",
    "directory": "packages/filid"
  },
  "license": "MIT",
  "author": {
    "name": "Vincent K. Kelvin",
    "email": "lunox273@gmail.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "agents",
    "bridge",
    "libs",
    "hooks",
    "skills",
    "templates",
    ".claude-plugin",
    ".mcp.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf bridge",
    "version:sync": "node scripts/inject-version.mjs",
    "build": "yarn clean && yarn version:sync && tsc -p tsconfig.build.json && node scripts/build-mcp-server.mjs && node scripts/build-hooks.mjs",
    "build:plugin": "node scripts/build-mcp-server.mjs && node scripts/build-hooks.mjs",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,mjs,md}\"",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "version:major": "yarn version major",
    "version:minor": "yarn version minor",
    "version:patch": "yarn version patch"
  },
  "dependencies": {
    "@ast-grep/napi": "^0.31.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "fast-glob": "^3.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
